<div class="post-show">
  <div class="contents">
    <%= image_tag @post.image, class: 'post-img' %>
    
    <div class="post-show-tags">
      <% @post.tags.each do |list| %>
        <span class="tag">
          <%= link_to list.tag_name, tag_posts_path(list.id) %>
        </span>
      <% end %>
    </div>
  
    <h2 class="post-title">
      <%= @post.title %>
    </h2>
    <div class="icon-box">
      <div class="icon"></div>
      <%# image_tag 'sample1.jpeg', class: 'icon-pic'%>
      <h3 class="user-name"><%= link_to @post.user.nickname, user_path(@post.user.id) %></h3>
    </div>
  
    <div class="overview-wrapper">
      <h3 class="show-title">・概要</h3>
      <p class="show-text">
        <%= simple_format @post.overview %>
      </p>
    </div>

    <div class="programminlanguages-wrapper">
      <h3 class="show-title">・プログラミング言語</h3>
      <p class="show-text">
        <%= simple_format @post.programming_languages %>
      </p>
    </div>

    <div class="techs-wrapper">
      <h3 class="show-title">・技術</h3>
      <p class="show-text">
        <%= simple_format @post.techs %>
      </p>
    </div>

    <div class="url-wrapper">
      <h3 class="show-title">・GitHub</h3>
      <p class="show-text">
        <%= link_to @post.github_url %>
      </p>
    </div>

    <div class="url-wrapper">
      <h3 class="show-title">・URL</h3>
      <p class="show-text">
      <%= link_to @post.portfolio_url %>
      </p>
    </div>
    
    <div class="likes">
      <% if @already_like.present? %>
          <%= link_to post_like_path(@post.id, @already_like.id), method: :delete do %>
            <span class="fas fa-star like"></span>
          <% end %>
      <% else %>
        <%= link_to post_likes_path(@post.id), method: :post do %>
          <span class="fas fa-star"></span>
        <% end %>
      <% end %>
      <span class="likes-count"><%= @post.likes.count %></span>
    </div>

    <% if user_signed_in? && current_user.id == @post.user_id %>
      <div class="post-manage">
        <div class="btn-wrapper">
          <%= link_to "編集", edit_post_path(@post.id), class: "btn edit-btn"%>
          <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn destroy-btn"%>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="comment-wrapper">
    <h3 class="show-title">コメント</h3>
    <ul class="comments-lists">
      <% @comments.each do |comment| %>
        <li class="comments-list">
          <%= link_to comment.user.nickname, user_path(comment.user.id), class: :comment_user %>: 
          <%= comment.text %>
        </li>
      <% end %>
      <li class="comments-list" id="list"></li>
    </ul>

    <% if user_signed_in? %>
      <%= form_with model: [@post, @comment], id: "form", local: true do |f|%>
        <div class="field">
          <%= f.label :text, "コメント記入", class: "show-title" %><br />
          <%= f.text_area :text, class: :text, id: "content"  %>
        </div>
        <div class="submit-btn">
          <%= f.submit "送信する", class: :form__btn, id: "submit"  %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>