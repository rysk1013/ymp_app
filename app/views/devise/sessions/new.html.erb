<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="login-container">
    <div class="login-wrapper">
      <h1 class="login-title">ログイン</h1>

      <div class="notice">
        <p class="already-or-new">
          ※登録済みのユーザーはこちらから
          <%= link_to "新規登録", new_user_registration_path %>
          してください。
        </p>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="label-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class: "input-default", placeholder: "PC・携帯どちらでも可" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="label-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class: "input-default", placeholder: "" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>

      <div class='login-btn'>
        <%= f.submit "ログイン" ,class:"login-red-btn" %>
      </div>

      <div class="notice return">
        <p>
          TOPページに
          <%= link_to "戻る", root_path %>
        </p>
      </div>
    </div>
  </div>
<% end %>