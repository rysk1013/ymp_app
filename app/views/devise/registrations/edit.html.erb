<div class="main">

  <%= render 'shared/header' %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="registration-container">
    <div class="registration-wrapper">
      <h1 class="registration-title">ユーザー編集</h1>

      <%= render 'posts/error_messages', model: f.object %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label name="image" class="label-text label-color">プロフィール画像</label>
          <span class="dispensable">任意</span>
        </div>
        <%= f.file_field :image, class: "input-default" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="label-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class: "input-default", placeholder: "例）テストタロウ", maxlength: "40"%>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="label-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class: "input-default", placeholder: "PC・携帯どちらでも可" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="label-text">自己紹介</label>
          <span class="dispensable">任意</span>
        </div>
        <%= f.text_area :profile, class: "profile", placeholder: "自己紹介を記入してください" %>
      </div>

      <div class='register-btn'>
        <%= f.submit "更新する" ,class:"register-red-btn" %>
      </div>
    </div>
  </div>
  <% end %>
</div>